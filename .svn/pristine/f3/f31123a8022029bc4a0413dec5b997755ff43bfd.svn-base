<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hx.auth.mapper.UserMapper">

  <resultMap id="BaseResultMap" type="com.hx.auth.entity.UserEntity">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="icon" jdbcType="VARCHAR" property="icon" />
    <result column="help_count" jdbcType="INTEGER" property="helpCount" />
    <result column="show_status" jdbcType="INTEGER" property="showStatus" />
    <result column="sort" jdbcType="INTEGER" property="sort" />
  </resultMap>
  
    <select id="findByUserName" parameterType="string" resultMap="BaseResultMap">
        SELECT * FROM user WHERE 1=1 and  username = #{usernamae}
    </select>
</mapper>